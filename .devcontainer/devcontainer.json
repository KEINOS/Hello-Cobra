// See https://aka.ms/vscode-remote/containers for the
// documentation about the devcontainer.json format
{
	"name": "Dev Container for Golang",
	"dockerFile": "Dockerfile",
	"settings": {
		// VSCode settings are defined in "./settings.vscode.json"
	},
	"appPort": [
        "5963"
    ],
    "runArgs": ["-v", "/var/run/docker.sock:/var/run/docker.sock"],
	"postCreateCommand": "/bin/bash /postCreateCommand.sh;",
	"remoteUser": "root",
	"extensions": [
		"golang.go",
		"editorconfig.editorconfig",
		"foxundermoon.shell-format",
		"ms-ceintl.vscode-language-pack-ja"
	]
}
